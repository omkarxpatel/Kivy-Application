<DownloadPage>:
    name: "download_page"

    MDCard:
        size_hint: None, None
        size: 780, 825
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 50
        spacing: 30
        orientation: 'vertical'
        ripple_behavior: True
        md_bg_color: app.theme_cls.primary_light


    MDCard:
        size_hint: None, None
        size: 730, 775
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 50
        spacing: 50
        orientation: 'vertical'
        
        
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            

            MDIconButton:
                icon: "arrow-left-thick"
                pos_hint: {'center_y': 0.5}
                user_font_size: '30sp'
                on_press: root.manager.current = "Main_Page"


            MDLabel:
                text: "Download Music      "
                halign: 'center'
                valign: 'center'

                font_size: dp(24)
                bold: True
                size_hint_x: None

                width: 500
                pos_hint: {"center_y": 0.5}


        MDTextField:
            id: videourl
            hint_text: "Video Url"

            icon_right: "link"
            write_tab: False
            
            size_hint_x: None
            width: 500
            font_size: 30

            pos_hint: {"center_x": 0.5}



        MDRaisedButton:
            text: "DOWNLOAD"

            font_size: 25
            size_hint: (.75, .25)
            pos_hint: {"center_x": 0.5}

            on_press: app.start_user_screen()


        MDLabel:
            text: " "
            halign: "center"
            valighn: "down"